doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/css/style.css')
  body
    .container
      h1 Update Project
      form(action= project ? `/update-cobj/${project.id}` : '/update-cobj' method='post')
        label(for='name') Project Name
        input(type='text' name='name' value= project ? project.properties.name : '' required)
        
        label(for='description') Description
        textarea(name='description' required)= project ? project.properties.description : ''
        
        label(for='status') Status
        select(name='status' required)
          option(value='On Hold' selected= project && project.properties.status === 'On Hold') On Hold
          option(value='In Progress' selected= project && project.properties.status === 'In Progress') In Progress
          option(value='Completed' selected= project && project.properties.status === 'Completed') Completed
        
        button(type='submit')= project ? 'Update Project' : 'Create Project'
